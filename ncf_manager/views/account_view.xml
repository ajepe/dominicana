<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ncf_manager_account_journal_form" model="ir.ui.view">
        <field name="name">ncf manager aacount journal form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field invisible="1" name="ncf_ready"/>
                <button attrs="{'invisible':['|',('ncf_control','!=',True),('ncf_ready','!=',False)]}" class="oe_stat_button" icon="fa-database" name="create_ncf_sequence" string="Generar NCF" type="object"/>
            </xpath>
            <field name="type" position="after">
                <field attrs="{'invisible': [('type','!=','sale')]}" name="ncf_control"/>
                <field attrs="{'invisible': [('type','!=','purchase')]}" name="purchase_type" widget="selection"/>
                <field attrs="{'invisible': [('type','!=','purchase')]}" name="ncf_remote_validation"/>
                <field attrs="{'invisible': [('type','not in',('cash','bank'))], 'required': [('type','in',('cash','bank'))]}" name="payment_form"/>
            </field>
            <notebook>
                <page attrs="{'invisible':[('ncf_control','!=',True)]}" string="Secuencias NCF">
                    <group>
                        <field name="sequence_id"/>
                        <field name="special_fiscal_position_id"/>
                    </group>
                    <group>
                        <field name="date_range_ids" nolabel="1">
                            <tree>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="number_next_actual"/>
                                <field name="max_number_next"/>
                                <field name="warning_ncf"/>
                                <field name="sale_fiscal_type"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    <record id="ncf_manager_account_tax_form" model="ir.ui.view">
        <field name="name">ncf manager account tax form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <field name="type_tax_use" position="after">
                <field attrs="{'invisible': [('type_tax_use','!=','purchase')]}" name="purchase_tax_type" widget="radio"/>
                <field attrs="{'invisible': [('purchase_tax_type','!=','isr')],                                'required': [('purchase_tax_type','=','isr')]}" name="isr_retention_type"/>
            </field>
        </field>
    </record>
    <record id="view_account_form_inherited" model="ir.ui.view">
        <field name="name">view.account.form.inherited</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field attrs="{'invisible': [('user_type_id','not in',[%(account.data_account_type_revenue)d,                 %(account.data_account_type_other_income)d, %(account.data_account_type_fixed_assets)d,                 %(account.data_account_type_current_assets)d, %(account.data_account_type_non_current_assets)d ])]}" name="income_type"/>
                <field attrs="{'invisible': [('user_type_id','not in',[%(account.data_account_type_direct_costs)d,                 %(account.data_account_type_expenses)d, %(account.data_account_type_depreciation)d])]}" name="expense_type"/>
            </xpath>
        </field>
    </record>
</odoo>